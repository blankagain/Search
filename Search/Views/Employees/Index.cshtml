<table class="table">
    <thread>

      <tr>
         <th>Sno</th>
        <th>Id</th>
        <th>Name</th>
        <th>Email</th>
        <th>Salary</th>
        <th>DOB</th>
        <th>Department</th>
      </tr>

    </thread>

    <tbody>
        @foreach (var employee in Model)
        {
            Sno = Sno + 1;
            <tr>
                <td>@Sno</td>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@employee.Salary</td>
                <td>@employee.DOB</td>
                <td>@employee.Department</td>
                <td><a href="Employees/View/@employee.Id">View</a></td>
            </tr>

        }
    </tbody>

</table>
<script>
    function changeBackground(color) {
        document.body.style.background = color;
    }

    window.addEventListener("load", function () { changeBackground('#CCE1FF') });
</script>