@model List<Search.Models.Domain.Employee>

@{
    
}

<h1>Employees</h1>

<table class="table">
    <thread>

      <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Email</th>
        <th>Salary</th>
        <th>DOB</th>
        <th>Department</th>
      </tr>

    </thread>

    <tbody>
        @foreach (var employee in Model)
        {
            <tr>
                <td>@employee.Id</td>
                <td>@employee.Name</td>
                <td>@employee.Email</td>
                <td>@employee.Salary</td>
                <td>@employee.DOB</td>
                <td>@employee.Department</td>
                <td><a href="Employees/View/@employee.Id">View</a></td>
            </tr>

        }
    </tbody>

</table>